<%= form_for(@quiz) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new quiz..." %>
    <%= f.text_area :answer, placeholder: "Compose new answer..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>